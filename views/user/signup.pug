doctype html
html(lang='en')
  include ../common/head.pug
  +head("Sign up")
  body
    header
      include ../common/navbar.pug
      +navbar()
      .container
        .row
          .col-sm-12.offset-md-2.col-md-8
            .jumbotron
              h2.text-center Sign up
              .row
                .col-sm-12.col-md-12
                  form(action='/signup', method='POST')
                    div.formgroup
                      label.small.mb-1.mt-3 Email:
                      input(placeholder='Please enter your email', required=true, name='email', type='email', value=formData.email).form-control
                      if (errors && errors.email)
                        p.small.text-danger #{errors.email}
                      label.small.mx-2.mt-3 First Name:
                        input(placeholder='John', required=true, name='firstname', type='name').form-control
                      label.small.mx-2.mt-3 Last Name:
                        input(placeholder='Doe', required=true, name='lastname', type='name').form-control
                      label.px-2.mx-4 Admin:
                        input(type="radio" name="is_admin" id="is_admin" value="true").ml-3.form.control
                      .label.small.mb-1.mt-2 Password:
                        input(placeholder='New Password',required=true, name='password', type='password', value='').form-control
                        if (errors && errors.password)
                          p.small.text-danger #{errors.password}
                    button.mt-3.btn.btn-info(type='submit') Sign up
                    p.mt-2.mb-0
                        | Already have an account? #[a(href="/login") Log in here].

    include ../common/footer.pug
    +footer()
